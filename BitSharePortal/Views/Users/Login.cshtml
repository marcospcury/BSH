@model BitSharePortal.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>BITshare</title>
    <link href="@Url.Content("~/Content/css/black-tie/jquery-ui-1.9.2.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ObjectIDs.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Classes.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/js/jquery-1.8.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/jquery-ui-1.9.2.custom.js")" type="text/javascript"></script>
    <script>
        $(function () {
            $("#botaoLogin").button({
                icons: {
                    primary: "ui-icon-key"
                }
            });

            $("#botaoConvite").button({
                icons: {
                    primary: "ui-icon-mail-closed"
                }
            });
        });
    </script>
    <style>
        #botaoLogin,  #botaoConvite {
            font: 98% "Trebuchet MS", sans-serif;
            color:white;
        }

        #loginContainer {
            width:400px;
            margin:auto;
            text-align:center;
        }

        .inputFields {
            width:220px;
        }
        
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            <div id="loginContainer" class="borderedDiv">
                <div class="ui-widget-header padded">Login</div>
                <div class="padded">
                    <div style="width: 150px; float: left; ">Usuário:</div>
                    <div  style=" text-align:left;">@Html.TextBoxFor(m => m.Username, new { @class = "inputFields" })</div>
                </div>
                <div class="padded">
                    <div style="width: 150px; float: left;">Senha:</div>
                    <div  style=" text-align:left;">@Html.PasswordFor(m => m.Password, new { @class = "inputFields" })</div>
                </div>
                <div class="padded">
                    <div style="width: 150px; float: left;">Manter conectado:</div>
                    <div style=" text-align:left;">@Html.CheckBoxFor(m => m.Connected)</div>
                </div>
                @Html.ValidationSummary(true, "Login inválido.")
                <div class="padded">
                     <div style="width: 100px; float: left; margin-left:50px;"><button id="botaoLogin" onclick="javascript: document.forms[0].submit();">Login</button></div>
                     <div><a href="EnterInvite" id="botaoConvite">Inserir convite</a></div>
                </div>
            </div>
        }
    </div>
</body>
</html>
