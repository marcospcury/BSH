<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/black-tie/jquery-ui-1.9.2.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/js/jquery-1.8.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/jquery-ui-1.9.2.custom.js")" type="text/javascript"></script>

    <style>
        body {
            font: 72.5% "Trebuchet MS", sans-serif;
            margin: 15px;
            background-image: url("../Content/Images/steel_honeycomb.jpg");
            background-color: #404040;
            text-align: left;
        }

        p {
            font: 110% "Trebuchet MS", sans-serif;
        }

        a:link, a:visited {
            text-decoration: none;
            color: #000;
        }

        a:hover {
            text-decoration: underline;
            color: #f00;
        }

        a:active {
            text-decoration: none;
        }

        .demoHeaders {
            margin-top: 2em;
        }

        #dialog-link {
            padding: .4em 1em .4em 20px;
            text-decoration: none;
            position: relative;
        }

            #dialog-link span.ui-icon {
                margin: 0 5px 0 0;
                position: absolute;
                left: .2em;
                top: 50%;
                margin-top: -8px;
            }

        #icons {
            margin: 0;
            padding: 0;
        }

            #icons li {
                margin: 2px;
                position: relative;
                padding: 4px 0;
                cursor: pointer;
                float: left;
                list-style: none;
            }

            #icons span.ui-icon {
                float: left;
                margin: 0 4px;
            }

        #headerBanner {
            border-bottom: solid;
            background-image: url("../Content/Images/spiderweb.jpg");
            border-bottom-style: groove;
            border-width: thin;
            margin-left: 5px;
            margin-right: 5px;
            text-align: center;
            height: 100px;
        }

        #headerMenu {
            border-bottom: solid;
            border-bottom-style: groove;
            border-width: thin;
            margin-left: 5px;
            margin-right: 5px;
            text-align: center;
            background-color: black;
        }

        #userDataStrip {
            margin-top: 5px;
            margin-left: 5px;
            margin-right: 5px;
            border-bottom: solid;
            border-bottom-width: thin;
            border-bottom-color: silver;
        }

        #mainContainer {
            text-align: left;
            background-color: white;
            border: solid;
            border-style: groove;
            border-width: thin;
            width: 910px;
            margin-left: auto;
            margin-right: auto;
            -moz-box-shadow: 0 0 20px 5px #333;
            -webkit-box-shadow: 0 0 20px 5px #333;
            box-shadow: 0 0 10px 2px #333;
            z-index: 25;
        }

        .buttonMenuMain {
            width: 124px;
            border-radius: 0px 0px;
            font-weight: bold;
            font-size: 10px;
        }
    </style>
    <script>
        $(function () {
            $("button").button();
        });
    </script>
</head>
<body>
    <div id="mainContainer">
        <div id="headerBanner">
        </div>
        <div id="headerMenu">
            <button class="buttonMenuMain">Home</button>
            <button class="buttonMenuMain">Torrents</button>
            <button class="buttonMenuMain">Upload</button>
            <button class="buttonMenuMain">Forum</button>
            <button class="buttonMenuMain">Top 10</button>
            <button class="buttonMenuMain">Regras</button>
            <button class="buttonMenuMain">Contato</button>
        </div>
        <div id="userDataStrip">
            Olá, marcospcury [Logout]
        </div>
        <div id="containerContent">
            @RenderBody()
            <br style="clear: both;" />
        </div>
    </div>
</body>
</html>
